		</action>

		<!--查看所有入库单action -->
		<action name="lookallwuliaobf" class="com.sheng.action.LookwuliaobfAction">
			<result name="success">showallwuliaobf.jsp</result>
			<result name="input">500.htm</result>
		</action>

	</package>

	<!--权限4    拥有查看，出库，入库，添加工作人员-->
